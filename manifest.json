{
  "manifest_version": 2,
  "name": "Copy URL to clipboard",
  "description": "Add a context menu option to links to copy the link to the clipboard",
  "version": "1.0",
  "homepage_url": "https://github.com/haruyama/copy-url-to-clipboard",

  "background": {
    "scripts": [ "background.js" ]
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "clipboardWrite",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "applications": {
    "gecko": {
      "id": "copy-link@unixuser.org"
    }
  }
}
